{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Top 5 Country with the Most Suicide Cases",
    "data": {"url": "https://raw.githubusercontent.com/ZLim0036/FIT-3179-Project-2/main/data/Top%205%20Country%20Suicide%20Case%20According%20to%20Age.csv"},
    "layer": [{
      "mark": "bar"
    }
  ],
    "params": [{
      "name": "age_selection",
      "bind":{
        "input": "select",
        "options":[
          null,
          "5-14 years",
          "15-24 years",
          "25-34 years",
          "35-54 years",
          "55-74 years",
          "75+ years"
        ],
        "labels": [
          "Show All",
          "5-14 years",
          "15-24 years",
          "25-34 years",
          "35-54 years",
          "55-74 years",
          "75+ years"
        ],
        "name": "Select Age Group: "
      }
    }],
    "transform": [
      {"filter": "age_selection == null || datum.age == age_selection"}
    ],
    "height":200,
    "width": "container",
    "encoding": {
      "y": {
        "field": "country",
        "type": "ordinal",
        "title": "Country"
      },
      "x": {
        "aggregate":"sum",
        "field":"suicides_no",
        "type": "quantitative",
        "title":"Total Suicide Case"
    
      },
      "color": {
        "field": "age",
        "type": "nominal",
        "title": "Age Group"
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "age", "type": "nominal", "title": "Age Group"},
        {"field": "suicides_no", "type": "quantitative","title": "Total Sucide Case","format":","}
    ]
  }
  }